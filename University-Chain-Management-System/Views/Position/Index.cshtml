@model IEnumerable<Position>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Positions";
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (Position position in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">@position.Name</p>
                            <p class="card-text">@position.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Position" asp-action="Details" asp-route-id="@position.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-controller="Position" asp-action="Edit" asp-route-id="@position.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                </div>
                                <small class="text-muted">@position.Id</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
