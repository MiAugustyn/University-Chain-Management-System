@model Position
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Positions";
}

<div class="container">

    <h1 class="my-4">@Model.Name</h1>

    <div class="row">

        <div class="col-md-4">
            <h3 class="my-3">Informations:</h3>

            <ul>
                <li>ID: @Model.Id</li>
                <li>Description: @Model.Description</li>
                <li>Number of employees in this position: @Model.Employees?.Count</li>

            </ul>
        </div>

    </div>

</div>
