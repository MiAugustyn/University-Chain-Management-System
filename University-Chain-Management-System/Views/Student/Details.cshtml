@model Student
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Students";
}

<div class="container">

    <h1 class="my-4">@Model.FullName</h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.Image" alt="Student">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Informations:</h3>

            <ul>
                <li>ID: @Model.Id</li>
                <li>Grades count: @Model.Grades?.Count</li>
                <li>Majors count: @Model.Majors?.Count</li>
            </ul>
        </div>

    </div>

    <h3 class="my-4">Grades:</h3>

    <div class="row">

        @foreach (Grade grade in Model.Grades ?? Enumerable.Empty<Grade>())
        {
            <div class="col-md-3 col-sm-6 mb-4">
                    <p>@grade.Value</p>
            </div>
        }

    </div>
</div>