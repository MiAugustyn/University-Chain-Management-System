@model IEnumerable<Student>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Students";
}

<a asp-controller="Student"
        asp-action="Create"
        class="btn btn-outline-primary btn-lg w-100"
        type="button">
    Create new Student
</a>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (Student student in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@(string.IsNullOrWhiteSpace(student.Image)
                            ? "https://images.unsplash.com/photo-1628313388777-9b9a751dfc6a?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                            : student.Image)"
                            onerror="this.src='https://images.unsplash.com/photo-1628313388777-9b9a751dfc6a?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D';"
                            alt="Student" width="100%" height="250" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@student.FullName</p>
                            <p class="card-text">@(string.IsNullOrEmpty(student.Email) ? "Email not provided" : student.Email)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Student" asp-action="Details" asp-route-id="@student.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" type="button" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                                <small class="text-muted">@student.Id</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
