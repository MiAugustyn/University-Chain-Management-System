@model IEnumerable<Student>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Students";
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (Student student in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@student.Image" width="100%" height="250" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@student.FirstName @student.LastName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Student" asp-action="Details" asp-route-id="@student.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                </div>
                                <small class="text-muted">@student.Id</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
