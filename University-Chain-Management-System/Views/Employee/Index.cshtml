@model IEnumerable<Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Employees";
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach(Employee employee in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@employee.Image" width="100%" height="250" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@employee.FullName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" type="button" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                                <small class="text-muted">@employee.Id</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>
