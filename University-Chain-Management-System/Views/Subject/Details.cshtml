@model Subject
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Subject's Details";
}

<div class="container">
    <div class="row my-4 align-items-start g-3">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body d-flex flex-column flex-md-row gap-3">
                    <div class="flex-grow-1">
                        <h4 class="mb-1">@Model.Name</h4>

                        <dl class="row mb-0">
                            <dt class="col-sm-4"><strong>Lecturer</strong></dt>
                            <dd class="col-sm-8">
                                @if (Model?.Employee == null)
                                {
                                    <span class="text-muted">Not Assigned</span>
                                }
                                else
                                {
                                    <p>@Model.Employee.FullName</p>
                                }
                            </dd>

                            <dt class="col-sm-4"><strong>Major</strong></dt>
                            <dd class="col-sm-8">
                                @if (Model?.Major == null)
                                {
                                    <span class="text-muted">Not Assigned</span>
                                }
                                else
                                {
                                    <p>@Model.Major.Name</p>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Info</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Subject ID</strong> <span class="badge bg-secondary ms-2">@Model.Id</span></p>
                    <p class="mb-2"><strong>Lecturer ID</strong> <span class="badge bg-secondary ms-2">@Model.EmployeeId</span></p>
                    <p class="mb-2"><strong>Major ID</strong> <span class="badge bg-secondary ms-2">@Model.MajorId</span></p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-sm btn-secondary">Back to list</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <h5 class="my-3">Lecturer and Major</h5>

        <div class="row g-3">
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header">
                        <strong>Lecturer</strong>
                    </div>

                    <div class="card-body d-flex flex-column align-items-center text-center">
                        @if (Model?.Employee == null)
                        {
                            <div class="alert alert-secondary w-100 mb-0">No lecturer assigned</div>
                        }
                        else
                        {
                            var lecturer = Model.Employee;
                            <img class="rounded-circle mb-2" loading="lazy" width="96" height="96" style="object-fit:cover;"
                                 src="@(string.IsNullOrWhiteSpace(lecturer?.Image) ? Constants.DefaultUserImage : lecturer.Image)"
                                 onerror="this.onerror=null;this.src='@Constants.DefaultUserImage';"
                                 alt="@(!string.IsNullOrWhiteSpace(lecturer?.FullName) ? lecturer.FullName + " photo" : "Lecturer photo")" />


                            <h5 class="card-title mb-1">@lecturer?.FullName</h5>
                            <p class="card-text small text-muted mb-2">ID: @lecturer.Id</p>
                            <div class="mt-auto">
                                <a asp-controller="Employee" asp-action="Details" asp-route-id="@lecturer.Id" class="btn btn-sm btn-outline-primary">View</a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header">
                        <strong>Major</strong>
                    </div>

                    <div class="card-body d-flex flex-column">
                        @if (Model?.Major == null)
                        {
                            <div class="alert alert-secondary mb-0">No major assigned</div>
                        }
                        else
                        {
                            var major = Model.Major;
                            <h5 class="card-title mb-1">@major.Name</h5>
                            <p class="card-text text-muted mb-2 small">
                                @(string.IsNullOrWhiteSpace(major?.Description) ? "No description" : major.Description)
                            </p>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">ID: @major.Id</span>
                                <a asp-controller="Major" asp-action="Details" asp-route-id="@major.Id" class="btn btn-sm btn-outline-primary">View</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>