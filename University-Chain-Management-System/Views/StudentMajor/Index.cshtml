@model IEnumerable<StudentMajor>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Student's Majors";
}

<a asp-controller="StudentMajor"
        asp-action="Create"
        class="btn btn-outline-primary btn-lg w-100"
        type="button">
    Create new Student's Major
</a>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (StudentMajor studentMajor in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">Student: @studentMajor.Student.FullName</p>
                            <p class="card-text">Major: @studentMajor.Major.Name</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="StudentMajor" asp-action="Details" asp-route-id="@studentMajor.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-controller="StudentMajor" asp-action="Edit" asp-route-id="@studentMajor.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="StudentMajor" asp-action="Delete" asp-route-id="@studentMajor.Id" type="button" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                                <small class="text-muted">@studentMajor.Id</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
