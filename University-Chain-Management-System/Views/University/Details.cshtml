@model University
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Universities";
}

<div class="container">
    <div class="row my-4 g-3">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body d-flex flex-column flex-md-row gap-3">
                    <div class="flex-grow-1">
                        <h4 class="mb-1">@Model.Name</h4>

                        <dl class="row mb-0">
                            <dt class="col-sm-4"><strong>City</strong></dt>
                            <dd class="col-sm-8">
                                @if (string.IsNullOrWhiteSpace(Model?.City))
                                {
                                    <span class="text-muted">Not Provided</span>
                                }
                                else
                                {
                                    @Model.City
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Info</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>University ID</strong> <span class="badge bg-secondary ms-2">@Model.Id</span></p>
                    <p class="mb-2"><strong>Employees Count</strong> <span class="badge bg-secondary ms-2">@((Model?.Employees?.Count) ?? 0)</span></p>
                    <p class="mb-2"><strong>Majors Count</strong> <span class="badge bg-secondary ms-2">@((Model?.Majors?.Count) ?? 0)</span></p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-sm btn-secondary">Back to list</a>
                </div>
            </div>
        </div>
    </div>

    <h3 class="my-4">Employees</h3>

    <div class="row g-3">
        @if (!(Model?.Employees?.Any() ?? false))
        {
            <div class="col-12">
                <div class="alert alert-secondary mb-0">No employees found</div>
            </div>
        }
        else
        {
            @foreach (var employee in Model.Employees)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 text-center">
                        <div class="card-body d-flex flex-column align-items-center">
                            <img class="rounded-circle mb-2" loading="lazy" width="96" height="96" style="object-fit:cover;"
                                 src="@(string.IsNullOrWhiteSpace(employee?.Image) ? Constants.DefaultUserImage : employee.Image)"
                                 onerror="this.onerror=null;this.src='@Constants.DefaultUserImage';"
                                 alt="@(!string.IsNullOrWhiteSpace(employee?.FirstName + " " + employee?.LastName) ? $"{employee?.FirstName} {employee?.LastName} photo" : "Employee photo")" />


                            <h6 class="card-title mb-1">@employee.FullName</h6>
                            <p class="card-text small text-muted mb-2">ID: @employee.Id</p>
                            <div class="mt-auto">
                                <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-sm btn-outline-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

