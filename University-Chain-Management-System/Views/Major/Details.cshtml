@model Major
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Majors";
}

<div class="container">

    <h1 class="my-4">@Model.Name</h1>

    <div class="row">

        <div class="col-md-4">
            <h3 class="my-3">Informations:</h3>

            <ul>
                <li>ID: @Model.Id</li>
                <li>Description: @Model.Description</li>
                <li>University: @Model.University.Name</li>
                <li>Subjects count: @Model.Subjects.Count</li>

            </ul>
        </div>

    </div>

    <h3 class="my-4">Subjects in major:</h3>

    <div class="row">

        @foreach (Subject subject in Model.Subjects)
        {
            <p>@subject.Name</p>
        }

    </div>
</div>
