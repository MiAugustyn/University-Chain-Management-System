@model Major
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Majors";
}

<div class="container">
    <div class="row my-4 g-3">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body d-flex flex-column flex-sm-row gap-3">

                    <div class="flex-grow-1">
                        <h4 class="mb-1">@Model.Name</h4>

                        <dl class="row mb-0">
                            <dt class="col-sm-4"><strong>Description</strong></dt>
                            <dd class="col-sm-8">
                                @if (string.IsNullOrWhiteSpace(Model?.Description))
                                {
                                    <span class="text-muted">Not Provided</span>
                                }
                                else
                                {
                                    @Model.Description
                                }
                            </dd>

                            <dt class="col-sm-4"><strong>University</strong></dt>
                            <dd class="col-sm-8">
                                @if (Model?.University == null)
                                {
                                    <span class="text-muted">Not Provided</span>
                                }
                                else
                                {
                                    @Model.University.Name
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Info</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Major ID</strong> <span class="badge bg-secondary ms-2">@Model.Id</span></p>
                    <p class="mb-2"><strong>Subjects Count</strong> <span class="badge bg-secondary ms-2">@((Model?.Subjects?.Count) ?? 0)</span></p>
                    <p class="mb-2"><strong>Students Count</strong> <span class="badge bg-secondary ms-2">@((Model?.Students?.Count) ?? 0)</span></p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-sm btn-secondary">Back to list</a>
                </div>
            </div>
        </div>
    </div>

    <h5 class="my-4">Subjects in major</h5>

    <div class="row g-3">
        @if (!(Model?.Subjects?.Any() ?? false))
        {
            <div class="col-12">
                <div class="alert alert-secondary mb-0">No subjects found</div>
            </div>
        }
        else
        {
            @foreach (var subject in Model.Subjects)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-1">@subject.Name</h5>
                            <p class="card-text text-muted mb-2 small">
                                @(string.IsNullOrWhiteSpace(subject?.Description) ? "No description" : subject.Description)
                            </p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">ID: @subject.Id</span>
                                <a asp-controller="Subject" asp-action="Details" asp-route-id="@subject.Id" class="btn btn-sm btn-outline-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

        <div class="row mt-4">
            <div class="col-12">
                <h5 class="mb-3">Students in major</h5>

                @if (!(Model?.Students?.Any() ?? false))
                {
                    <div class="alert alert-secondary mb-0">No students assigned</div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var studentMajor in Model.Students)
                        {
                            var student = studentMajor.Student;
                            if (student == null) { continue; }

                            <div class="col-sm-6 col-md-4 col-lg-3">
                                <div class="card h-100 text-center">
                                    <div class="card-body d-flex flex-column align-items-center">
                                        <img class="rounded-circle mb-2" loading="lazy" width="96" height="96" style="object-fit:cover;"
                                             src="@(string.IsNullOrWhiteSpace(student?.Image) ? Constants.DefaultUserImage : student.Image)"
                                             onerror="this.onerror=null;this.src='@Constants.DefaultUserImage';"
                                             alt="@(!string.IsNullOrWhiteSpace(student?.FullName) ? student.FullName + " photo" : "Student photo")" />

                                        <h6 class="card-title mb-1">@student?.FullName</h6>
                                        <p class="card-text small text-muted mb-2">ID: @student.Id</p>
                                        <div class="mt-auto">
                                            <a asp-controller="Student" asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
