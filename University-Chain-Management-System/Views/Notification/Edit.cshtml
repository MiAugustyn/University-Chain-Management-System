@model Notification
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit Notification";
}

<form method="post" asp-action="Edit">

    <input asp-for="PublishDate" type="hidden" />

        <div class="form-group">
        <label asp-for="NotificationType"></label>
        <select asp-for="NotificationType"
                asp-items="Html.GetEnumSelectList<NotificationType>()"
                class="form-control">
        </select>
        <span asp-validation-for="NotificationType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Name">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>
