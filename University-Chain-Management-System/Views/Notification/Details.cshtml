@model Notification
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Notification's Details";
}

<div class="container">
    <div class="row my-4 g-3">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body d-flex flex-column flex-sm-row gap-3">
                    <div class="flex-grow-1">
                        <h4 class="mb-1">@Model.Title</h4>

                        <dl class="row mb-0">
                            <dt class="col-sm-4"><strong>Description</strong></dt>
                            <dd class="col-sm-8">
                                @if (string.IsNullOrWhiteSpace(Model?.Description))
                                {
                                    <span class="text-muted">Not Provided</span>
                                }
                                else
                                {
                                    @Model.Description
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Info</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Notification ID</strong> <span class="badge bg-secondary ms-2">@Model.Id</span></p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-sm btn-secondary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
